@model code.Models.Contact
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Tạo mới trang</h2>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label class="control-label">Tên</label>
                        @Html.EditorFor(model => model.ContactName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Số điện thoại</label>
                        @Html.EditorFor(model => model.PhoneNumber, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Yahoo</label>
                        @Html.EditorFor(model => model.Yahoo, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Skype</label>
                        @Html.EditorFor(model => model.Skype, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-default">Lưu</button>
                }
            </div>
        </div>
    </div>
</div>

