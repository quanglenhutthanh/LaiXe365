@model IEnumerable<code.Models.Page>
@{
    ViewBag.Title = "Danh sách trang";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Danh sách trang - <a href="~/adminpagemanager/create" class="btn btn-success btn-lg">Thêm mới</a></h2>
            </div>
        </div>
        <div class="panel-body">
            <div>
                <table class="table table-striped table-bordered table-hover" id="test">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Trang chủ</th>
                            <th>Thứ tự</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(Modelitem => item.Title)</td>
                                <td>@Html.CheckBoxFor(Modelitem => item.IsHomePage)</td>
                                <td>@Html.DisplayFor(Modelitem => item.PageOrder)</td>
                                <td>
                                    <a href="~/adminpagemanager/edit/@item.ID" class="btn btn-primary">Sửa</a>
                                    <a href="~/adminpagemanager/delete/@item.ID" onclick="return confirm('Bạn có chắc muốn xóa?')" class="btn btn-danger">Xóa</a>
                                    
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


