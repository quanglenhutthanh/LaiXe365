@model code.Models.Page
@{
    ViewBag.Title = "Xóa trang";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <!-- Form Elements -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Bạn có chắc muốn xóa?</h2>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label>Tên</label>
                        @Html.EditorFor(model => model.Title, new { @class = "form-control" })
                    </div>
                    @Html.HiddenFor(model => model.Content)
                    @Html.HiddenFor(model => model.IsHomePage)
                    <button type="submit" class="btn btn-default">Xóa</button>
                    <button type="submit" class="btn btn-default">Không</button>
                }
            </div>
        </div>
    </div>
</div>
